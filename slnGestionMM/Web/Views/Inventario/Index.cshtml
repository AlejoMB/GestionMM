@{
}
@model List<Media>

<link rel="stylesheet" href="~/css/Inventario.css" />

<h1>Inventario</h1>

<div id="productGallery">
    @foreach (var product in Model)
    {
        <div class="product">
            <h7>@product.TipoMedia.Name / @product.Tamano.Name / @product.Marca.Name / @* @product.Color.Name / *@ @product.Diseno.Name / @product.Segmento.Name </h7>
            <br />
            @foreach(var color in product.MediaColores)
            {
                <span class="color-square" style="background-color: @color.Color.RgbColor" title="@color.Color.Name">&ensp;&ensp;</span>
            }
            <img src="@ViewBag.UlrHost@product.Imagen" alt="@product.Name" />
            <p>Cantidad: 10 Unidades</p>
        </div>
    }
</div>

